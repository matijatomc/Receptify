<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Receptify.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Receptify.Views"
    Title="Receptify">

    <TabBar>
        <ShellContent
            Title="Početna"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="main" />

        <ShellContent
            Title="Dodaj"
            Icon="add.png"
            ContentTemplate="{DataTemplate views:AddRecipePage}"
            Route="add" />

        <ShellContent
            Title="Recepti"
            Icon="list.png"
            ContentTemplate="{DataTemplate views:RecipeListPage}"
            Route="list" />

        <ShellContent
            Title="Namirnice"
            Icon="list.png"
            ContentTemplate="{DataTemplate views:ShoppingListPage}"
            Route="shopping" />
    </TabBar>


</Shell>
